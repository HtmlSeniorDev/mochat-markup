extends ../../layout/layout
include ../../../blocks/card/template
include ../../../blocks/about/template
include ../../../blocks/steps/template  
  
block variables
  - var title = 'Эксперт дома';
    
block content
 .content-width
  .primary-title Эксперт ДОМа
  +b.MAIN.main
    +e.SECTION.application
      +b.row
        +e.col-1-2
          include ../../../blocks/block-applications/template
        +e.col-1-2
          +e.d-flex
            +e.col-1-2
              +Card('Вы эксперт в своей профессиональной области или у вас есть увлечение и практическое знание?','','')
              +Card('Вы понимаете о рисках все, мастерски управляете проектами или на «ты» с Data Science и визуализацией?','','')
            +e.col-1-2
              +Card('Вы знаете, что общего между восхождением на Килиманджаро, мотивацией и целью?','','')
              +Card('Есть желание делиться опытом?','','')
    +e.SECTION.about
      +about("О проекте",[{title:"Эксперт ДОМа", text:" – проект для сотрудников, готовых делиться лайфхаками лидерства и моделями управления," +
      " профессиональными знаниями и навыками, личными наработками и уникальным опытом."}, {
        title: "Эксперт ДОМа",
        text:" – проект для сотрудников, желающих получить знания и навыки по интересующей теме от профессионала своего дела!"
      }, {
        title: "Эксперт ДОМа",
        text:" – проект по передаче знаний от сотрудников внутри ГК ДОМ.РФ, который усиливает связь программ обучения с потребностями бизнеса и способствует формированию культуры современной самообучающейся организации и личному развитию."}])
    hr
    +about("Участвовать может любой сотрудник!",[{
      title: "",
      text: "Специалист, руководитель, топ менеджер - каждый сотрудник может стать Экспертом ДОМа. Предлагайте свою тему и приходите на обучение к нашим Экспертам."
    }])
    +e.button-container
     +Button("Участвовать")
    hr
    +e.SECTION.benefits
      +e.title Преимущества участия в проекте
      include ../../../blocks/benefits-application/template
      +e.steps  
    hr
    +e.SECTION.proceed
      +e.title Как будет проходить проект
      include ../../../blocks/card-proceed/template
      +e.button-container
        +Button("Участвовать")
    hr    
    +e.SECTION.steps
      +e.title Шаги
      +steps("Шаг 1",[{
        article:"Выберите тему, в которой Вы готовы поделиться опытом",text:"Специалист, руководитель, топ менеджер - каждый сотрудник может стать Экспертом ДОМа. Предлагайте свою тему и приходите на обучение к нашим Экспертам"}])
      +steps("Шаг 2",[{
        article: "Выбираете способ передачи знаний",
        text: ""
      }])
      +e.steps
        +b.row
          +e.col-1-10
            +Card('Очный тренинг',true,"step-1")
          +e.col-1-10
            +Card('Вебинар',true,"step-2")
          +e.col-1-10
            +Card('Электронный курс',true,"step-3")
          +e.col-1-10
            +Card('Обучающее видео',true,"step-4")
          +e.col-1-10
            +Card('Статья',true,"step-5")
          +e.col-1-10
            +Card('Скринкаст',true,"step-6")
      +steps("Шаг 3",[{
        article: "Пройдите обучение с экспертами по направлениям",
        text: "Специалист, руководитель, топ менеджер - каждый сотрудник может стать Экспертом ДОМа. Предлагайте свою тему и приходите на обучение к нашим Экспертам."
      }])
      +steps("Шаг 4",[{
        article: "Создайте ваш уникальный контент",
        text: "Вместе с куратором от направления обучения создайте материал, который наилучшим образом раскроет выбранную вами тему"
      }])
      +steps("Шаг 5",[{
        article: "Поделитесь экспертизой",
        text: "Вместе с куратором от направления обучения создайте материал, который наилучшим образом раскроет выбранную вами тему"
      }])
      
      
      
      
        

